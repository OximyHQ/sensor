<Window x:Class="OximyWindows.Views.ViolationNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ShowActivated="False"
        ResizeMode="NoResize"
        Width="300" Height="160"
        Opacity="0">

    <Window.RenderTransform>
        <TranslateTransform x:Name="SlideTransform" Y="-20"/>
    </Window.RenderTransform>

    <Border Background="{DynamicResource BackgroundBrush}"
            CornerRadius="10"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="16" ShadowDepth="4" Opacity="0.25" Direction="270"/>
        </Border.Effect>

        <Grid Margin="14,12,14,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="6"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header row: shield icon + title + close button -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="&#xEA18;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="14"
                           Foreground="#FF6B00"
                           VerticalAlignment="Center"
                           Margin="0,0,6,0"/>

                <TextBlock Grid.Column="1"
                           Text="Data Redacted"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           VerticalAlignment="Center"/>

                <Button x:Name="CloseButton"
                        Grid.Column="2"
                        Content="&#xE711;"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="10"
                        Style="{DynamicResource IconButtonStyle}"
                        Padding="4"
                        VerticalAlignment="Center"
                        Click="CloseButton_Click"/>
            </Grid>

            <!-- PII row: icon + type label + host badge -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="6"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="PiiIconText"
                           Grid.Column="0"
                           Text="&#xE72E;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="13"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center"/>

                <TextBlock x:Name="PiiLabelText"
                           Grid.Column="2"
                           FontSize="12"
                           FontWeight="Medium"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           VerticalAlignment="Center"/>

                <!-- Host badge (blue pill) -->
                <Border Grid.Column="4"
                        Background="#1A0078D4"
                        CornerRadius="10"
                        Padding="8,2">
                    <TextBlock x:Name="HostText"
                               FontSize="11"
                               Foreground="#0078D4"
                               FontWeight="Medium"/>
                </Border>
            </Grid>

            <!-- Description -->
            <TextBlock x:Name="DescriptionText"
                       Grid.Row="4"
                       FontSize="11"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       TextWrapping="Wrap"/>

            <!-- Footer -->
            <StackPanel Grid.Row="6" Orientation="Horizontal">
                <TextBlock Text="&#xE73E;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="10"
                           Foreground="#107C10"
                           VerticalAlignment="Center"
                           Margin="0,0,4,0"/>
                <TextBlock Text="Sensitive data never left your device"
                           FontSize="10"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
