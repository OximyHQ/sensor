<Window x:Class="OximyWindows.Views.SuggestionNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ShowActivated="False"
        ResizeMode="NoResize"
        Width="320" Height="220"
        Opacity="0">

    <Window.RenderTransform>
        <TranslateTransform x:Name="SlideTransform" Y="-20"/>
    </Window.RenderTransform>

    <Border Background="{DynamicResource BackgroundBrush}"
            CornerRadius="10"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="16" ShadowDepth="4" Opacity="0.25" Direction="270"/>
        </Border.Effect>

        <Grid Margin="14,12,14,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="4"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header: lightbulb + title + close -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="&#xE82F;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="14"
                           Foreground="{DynamicResource AccentBrush}"
                           VerticalAlignment="Center"
                           Margin="0,0,6,0"/>

                <TextBlock Grid.Column="1"
                           Text="Suggested Playbook"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           VerticalAlignment="Center"/>

                <Button x:Name="CloseButton"
                        Grid.Column="2"
                        Content="&#xE711;"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="10"
                        Style="{DynamicResource IconButtonStyle}"
                        Padding="4"
                        VerticalAlignment="Center"
                        Click="CloseButton_Click"/>
            </Grid>

            <!-- Playbook name + category tag -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="6"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="CategoryIconText"
                           Grid.Column="0"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="13"
                           Foreground="{DynamicResource AccentBrush}"
                           VerticalAlignment="Center"/>

                <TextBlock x:Name="PlaybookNameText"
                           Grid.Column="2"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           VerticalAlignment="Center"
                           TextTrimming="CharacterEllipsis"/>

                <!-- Category tag -->
                <Border Grid.Column="3"
                        Background="{DynamicResource SurfaceBrush}"
                        CornerRadius="8"
                        Padding="6,2">
                    <TextBlock x:Name="CategoryTagText"
                               FontSize="10"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontWeight="Medium"/>
                </Border>
            </Grid>

            <!-- Description -->
            <TextBlock x:Name="DescriptionText"
                       Grid.Row="4"
                       FontSize="11"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       TextWrapping="Wrap"
                       MaxHeight="40"/>

            <!-- Action buttons -->
            <Grid Grid.Row="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="UseButton"
                        Grid.Column="0"
                        Content="Copy &amp; Use"
                        FontSize="12"
                        FontWeight="SemiBold"
                        Padding="0,6"
                        Background="{DynamicResource AccentBrush}"
                        Foreground="White"
                        BorderThickness="0"
                        Click="UseButton_Click"
                        Cursor="Hand"/>

                <Button x:Name="DismissButton"
                        Grid.Column="2"
                        Content="Dismiss"
                        FontSize="12"
                        Padding="0,6"
                        Style="{DynamicResource SecondaryButtonStyle}"
                        Click="DismissButton_Click"
                        Cursor="Hand"/>
            </Grid>

            <!-- Footer -->
            <StackPanel Grid.Row="8" Orientation="Horizontal">
                <TextBlock Text="&#xE73E;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="10"
                           Foreground="#107C10"
                           VerticalAlignment="Center"
                           Margin="0,0,4,0"/>
                <TextBlock Text="Approved by your organization"
                           FontSize="10"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
